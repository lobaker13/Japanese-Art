<table>
  <thead>
    <h2 class="artist_h2">Artists</h2>
    <tr class="artist_table">
      <th>Name</th>
      <th>Bio</th>
      <th>Date of Birth</th>
      <th>Date of Death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr class="artist_info">
        <td class="name"><%= artist.name %></td>
        <td class="bio"><%= artist.bio %></td>
        <td class="dob"><%= artist.dob %></td>
        <td class="dod"><%= artist.dod %></td>
        <!-- Admin visable only -->
      <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Show', artist, :class => "color" %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), :class => "color" %></td>
        <td><%= link_to "Destroy", artist, method: :delete, remote:true,data: { confirm: 'Are you sure?' }, :class => "delete-artist color" %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.admin? %>
<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-2">
    <%= link_to 'New Artist', new_artist_path, :id => 'button' %>
  </div>
  <div class="col-md-6">
  </div>
</div>
<% end %>
