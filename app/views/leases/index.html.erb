<div id="leases">
  <h2>Leases</h2>

  <table id="leasetable">
    <thead>
      <tr>
        <th class="color">Price</th>
        <th class="color">Lease start date</th>
        <th class="color">Lease end date</th>
        <th class="color">Art</th>
        <th class="color">Client</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leases.each do |lease| %>
        <tr>
          <td class="color2"><%= lease.price %></td>
          <td class="color2"><%= lease.lease_start_date %></td>
          <td class="color2"><%= lease.lease_end_date %></td>
          <td class="color2"><%= lease.art.name %></td>
          
        <% if user_signed_in? && current_user.admin? %>
          <td class="color2"><%= lease.user.fname %></td>
          <td><%= link_to 'Show', lease , :class => 'links' %></td>
          <td><%= link_to 'Edit', edit_lease_path(lease), :class => 'links'  %></td>
          <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'links'  %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'New Lease', new_lease_path, :id => 'button' %>
    <% end %>
</div>