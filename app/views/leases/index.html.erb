<p id="notice"><%= notice %></p>
<div id="leases">
  <h2>Leases</h2>

  <table id="leasetable">
    <thead>
      <tr>
        <th>Price</th>
        <th>Lease start date</th>
        <th>Lease end date</th>
        <th>Art</th>
        <th>Client</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leases.each do |lease| %>
        <tr>
          <td><%= lease.price %></td>
          <td><%= lease.lease_start_date %></td>
          <td><%= lease.lease_end_date %></td>
          <td><%= lease.art.name %></td>
          
        <% if user_signed_in? && current_user.admin? %>
          <td><%= lease.user.fname %></td>
          <td><%= link_to 'Show', lease %></td>
          <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
          <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'New Lease', new_lease_path, :id => 'button' %>
    <% end %>
</div>